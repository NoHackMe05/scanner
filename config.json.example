{
    "interfaces": [
        {
            "name": "eth0",
            "ip_range": "192.168.1.0/24",
        }
    ],
    "sniffer": {
        "zmq_address": "ipc:///tmp/nohackme_sniffer.ipc",
        "zmq_address_pub": "ipc:///tmp/nohackme_sniffer_pub.ipc",
        "filter": "arp or icmp or (port 67 or port 68) or port 53"
    },
    "debug_mode": true,
    "nmap_mode": "basic",
    "output_file": "scan_results.json",
    "scan_interval": 5,
    "max_threads": 4
}
